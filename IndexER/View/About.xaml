<controls:TabControlBase x:Class="IndexER.Client.View.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndexER.Client.View"
        xmlns:controls="clr-namespace:IndexER.Client.View.Controls"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300"
        DataContext="{Binding About, Source={StaticResource Locator}}">
    <Grid>
        <TextBlock x:Name="textabout" HorizontalAlignment="Right" VerticalAlignment="Top" Height="167" TextWrapping="Wrap" Text="IndexER - To program, który pełni funkcję elektronicznego dziennika informacyjnego dla nauczyczycieli jak i uczniów. Strona, na którą loguje się uczeń zawiera tylko dostęp do niektórych informacji, natomiast strona nauczyciela ma nielimitowane możliwości (edytowanie ocen / planów lekcji / informacji o uczniach)"  Width="158" FontSize="11" TextDecorations="{x:Null}"/>
        <TextBlock x:Name="aboutdevelopers" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="IndexER jest w fazie ALPHA ~ tworzony przez dwóch developerów - Aquerr , Rexi"/>
    </Grid>
</controls:TabControlBase>

