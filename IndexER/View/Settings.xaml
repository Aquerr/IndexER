<controls:TabControlBase x:Class="IndexER.Client.View.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndexER.Client.View"
        xmlns:controls="clr-namespace:IndexER.Client.View.Controls"
        mc:Ignorable="d"
        Height="416" Width="533"
        Loaded="SettingsWindow_Loaded"
        DataContext="{Binding Settings, Source={StaticResource Locator} }">
    <Grid>
        
        <Grid.RowDefinitions>            
            <RowDefinition Height="Auto"/>            
        </Grid.RowDefinitions>

        <DockPanel Dock="Left" HorizontalAlignment="Left" Height="200">
            <Button DockPanel.Dock="Top" Content="Grafika" Height="30" Width="100" VerticalAlignment="Top"/>
            <Button DockPanel.Dock="Top" Content="Uprawnienia" Height="30" Width="100" VerticalAlignment="Top"/>
            <Button DockPanel.Dock="Top" Content="Połączenia" Height="30" Width="100" VerticalAlignment="Top"/>
            <Button DockPanel.Dock="Top" Content="Języki" Height="30" Width="100" VerticalAlignment="Top"/>
        </DockPanel>

    </Grid>
    
</controls:TabControlBase>
